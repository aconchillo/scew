AC_INIT(src/scew.h)
AM_INIT_AUTOMAKE(scew, 0.2.0)
AM_CONFIG_HEADER(config.h)

AC_ISC_POSIX
AC_PROG_CC
AC_PROG_CC_STDC
AC_HEADER_STDC

AC_PROG_RANLIB

CFLAGS="-Wall $CFLAGS"
AC_SUBST(CFLAGS)

# Check for expat
AC_CHECK_LIB(expat, XML_Parse, , AC_MSG_ERROR(Unable to find Expat.
                  Download lastest version at http://www.libexpat.org))

AC_OUTPUT(
Makefile \
src/Makefile \
examples/Makefile \
examples/scew_print/Makefile
)

echo
echo "*** Simple C Expat Wrapper $VERSION has been successfully configured ***"
echo
echo "Type 'make' to complete the compilation and then 'make install' as root"
echo "to install."
echo
